{% extends "base.html.twig" %}


{% block body %}
    <div class="container pt-5">
    <div class="row">
        <div class="col-4">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.url) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.timer) }}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="row">
            <div class="col-12">

                {% if result is defined %}
                    <div class="alert alert-primary mt-5" role="alert">
                        <h4 class="alert-heading">Done!</h4>

                        <p>Please note that your minimize link will not be available after the expiration time</p>
                        <hr>
                        <h6 class="opacity-50">Original Link: </h6>
                        <p class="mb-10 opacity-50 text-break">{{ result.url }}
                        </p>
                        <h6>Minimize Link: </h6>
                        <p class="mb-10 opacity-50"><strong>Expire date</strong>: {{ result.minimize['expireDate'] }}
                        </p>
                        <p class="mb-0">
                            <a href="{{ result.minimize['shortUrl'] }}">{{ app.request.uri }}{{ result.minimize['shortUrl'] }}</a>
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}